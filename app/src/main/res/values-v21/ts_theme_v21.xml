<resources>

    <style name="ts_theme_overlay" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowBackground">@color/blue_A400</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ts_actionbar_overlay_style</item>
    </style>

    <style name="actionbarstyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">showHome|homeAsUp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/title_text_style</item>
    </style>
</resources>