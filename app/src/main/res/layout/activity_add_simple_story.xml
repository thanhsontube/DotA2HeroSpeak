<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_simple_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="son.nt.dota2.story.add_simple_story.AddSimpleStoryActivity">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/choose_hero"
               android:text="+"
               android:src="@drawable/pip_carry"
               android:gravity="center"
               android:padding="16dp"
               android:layout_gravity="center"/>

    <EditText android:layout_width="match_parent" android:layout_height="200dp"
              android:hint="Story"
              android:id="@+id/des_txt"
              android:padding="8dp"
              android:layout_marginTop="16dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Choose a Sound / Voices"
              android:id="@+id/choose_sound"
              android:gravity="center"
              android:padding="16dp"
              android:layout_marginTop="16dp"
              android:layout_gravity="center"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <son.nt.dota2.customview.SoundStoryView
                android:layout_width="0dp"
                android:id="@+id/choose_sound_view"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Edit"
                      android:padding="8dp"
                      android:id="@+id/choose_edit"/>

        </son.nt.dota2.customview.SoundStoryView>
    </LinearLayout>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Look Good"
              android:gravity="center"
              android:id="@+id/add_confirm"
              android:layout_marginTop="16dp"
              android:padding="16dp"
              android:layout_gravity="end"/>

</LinearLayout>
