<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_simple_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="son.nt.dota2.story.AddSimpleStoryActivity">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/choose_hero"
              android:text="+"
              android:gravity="center"
              android:padding="16dp"
              android:layout_gravity="center"/>

    <EditText android:layout_width="match_parent" android:layout_height="200dp"
              android:hint="Story"
              android:padding="8dp"
              android:layout_marginTop="16dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Choose a Sound / Voices"
              android:id="@+id/choose_sound"
              android:gravity="center"
              android:padding="16dp"
              android:layout_marginTop="16dp"
              android:layout_gravity="center"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Look Good"
              android:gravity="center"
              android:layout_marginTop="16dp"
              android:padding="16dp"
              android:layout_gravity="end"/>

</LinearLayout>
