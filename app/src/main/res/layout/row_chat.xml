<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/d_row_speaking"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_chat_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_agi_40"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_chat_fromName"
                style="@style/txt_white_14"
                android:text="Son Dota 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/row_chat_message"
                style="@style/txt_green_14"
                android:text="I love this voice so much"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/row_chat_create_day"
                    style="@style/txt_white_14"
                    android:text="1 hour ago"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"/>
                    <TextView
                        android:layout_marginRight="4dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="16dp"
        android:background="@drawable/d_row_speak"
        android:id="@+id/row_chat_play"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/row_chat_heroID"
            style="@style/txt_green_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phantom Assassin"/>

        <TextView
            android:id="@+id/row_chat_hero_text"
            style="@style/txt_blue_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It's not time yet !"/>
    </LinearLayout>


</LinearLayout>