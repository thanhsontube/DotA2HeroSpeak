<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/card_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:background="@color/amber_500"
              android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
            android:adjustViewBounds="true"
            android:id="@+id/cmts_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/spacing_minor"
            android:contentDescription="@string/avatar"
            android:src="@drawable/ic_launcher"
            app:riv_border_color="@android:color/white"
            app:riv_border_width="2dp"
            app:riv_corner_radius="34dp"
            app:riv_oval="true"/>
    <EditText
            android:layout_margin="4dp"
            android:inputType="textMultiLine|textCapSentences"
            android:id="@+id/cmts_message"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/write_a_commend"/>
    <ImageView
            android:id="@+id/cmts_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_content_send"/>

</LinearLayout>
