<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_brown_700"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mana" />
            <TextView
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/level_name"
                android:textColor="@color/md_yellow_A200"
                style="@style/table_ability_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/long_text"/>

        </LinearLayout>

        <TextView
            android:id="@+id/level1_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/table_ability_level"
            android:text="150"/>
        <TextView
            android:id="@+id/level1_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/table_ability_level"
            android:text="150"/>
        <TextView
            android:id="@+id/level1_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/table_ability_level"
            android:text="150"/>
        <TextView
            android:id="@+id/level1_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/table_ability_level"
            android:text="150"/>

    </LinearLayout>

    <View
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_400"></View>


</LinearLayout>