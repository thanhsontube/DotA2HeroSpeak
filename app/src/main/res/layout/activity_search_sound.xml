<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_choose_hero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="son.nt.dota2.story.choose_hero.ChooseHeroActivity">

    <EditText android:layout_width="match_parent" android:layout_height="?actionBarSize"
              android:hint="hero search"
              android:id="@+id/search_keyword"/>

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:layout_height="0dp"
                                            android:id="@+id/choose_rcv"></android.support.v7.widget.RecyclerView>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:padding="8dp"
              android:id="@+id/search_sound_select"
              android:gravity="center"
              android:text="Select"/>

</LinearLayout>
