<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="son.nt.dota2.fragment.VoiceFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/voice_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"/>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/voice_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@mipmap/icon_played"
        fab:fab_colorNormal="?colorPrimary"
        fab:fab_colorPressed="?colorPrimaryDark"
        fab:fab_colorRipple="@color/md_red_500" />

</FrameLayout>