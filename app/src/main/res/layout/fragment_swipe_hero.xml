<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:orientation="vertical"
              tools:context="son.nt.dota2.activity.HeroActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:visibility="gone"
                  android:id="@+id/sound_area"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <android.support.v7.widget.SwitchCompat android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/arcana_voice"
                                                android:text="Arcana"/>

        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/transparent"
                                                android:id="@+id/hero_rcv"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/skill_area"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/transparent"
                                                android:id="@+id/skill_rcv"/>
    </LinearLayout>


</FrameLayout>



