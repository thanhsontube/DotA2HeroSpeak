<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    android:orientation="vertical"
    tools:context="son.nt.dota2.fragment.AbilityFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/ability_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tab:tabGravity="center"
        tab:tabIndicatorColor="@color/md_yellow_700"
        tab:tabMode="scrollable">

    </android.support.design.widget.TabLayout>
    <ScrollView
        android:background="@color/md_grey_500"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!--
            =======================
                Ability Types
            =======================
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ability" />

                    <TextView
                        android:id="@+id/ability_abi"
                        android:textColor="@color/md_yellow_700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ability" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Affects" />

                    <TextView
                        android:id="@+id/ability_aff"
                        android:textColor="@color/md_yellow_700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ability" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Damage" />

                    <TextView
                        android:id="@+id/ability_damage"
                        android:textColor="@color/md_yellow_700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ability" />

                </LinearLayout>
            </LinearLayout>

            <!--
            =======================
                Ability Description
            =======================
            -->
            <TextView
                android:id="@+id/ability_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/long_text"
                android:textColor="@color/white"/>

            <!--
            =======================
                table cooldown - mana cost - damange
            =======================
            -->
            <include layout="@layout/table_ability_level"></include>
        </LinearLayout>

    </ScrollView>




</LinearLayout>
