<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="6dp"
    card:cardBackgroundColor="@color/purple_transparent"
    card:cardCornerRadius="4dp"
    card:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/row_roles_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_agi_40" />

            <TextView
                android:id="@+id/row_roles_name"
                style="@style/txt_white_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="Carry"
                android:textAllCaps="true"
                android:textColor="@color/md_yellow_700" />
        </LinearLayout>

        <TextView
            android:id="@+id/row_roles_slogan"
            style="@style/txt_white_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/long_text" />
    </LinearLayout>

</android.support.v7.widget.CardView>